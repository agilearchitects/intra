{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": [
         "es5",
         "es6",
         "dom"
      ],
      "outDir": "./build",
      "removeComments": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "typeRoots": [
         "./node_modules/@agilearchitects/simplyserve/@types",
         "./node_modules/@types"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
   },
   "include": [
      "src/api/**/*.ts",
      "src/shared/**/*.ts"
   ]
}